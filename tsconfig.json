{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@core/*": [
        "renderer/core/*"
      ],
      "@network/*": [
        "renderer/network/*"
      ],
      "@protocol/*": [
        "renderer/protocol/*"
      ],
      "@util/*": [
        "renderer/util/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
